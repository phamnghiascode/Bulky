@model List<Category>

@{
    ViewData["Title"] = "Danh mục";
}


<partial name="_Notification">

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Danh sách danh mục
            </h2>
        </div> 
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-dotted"></i>Tạo mới danh mục
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Tên danh mục</th>
                <th>Thứ tự hiển thị</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category category in Model.OrderBy(o => o.DisplayOrder))
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id ="@category.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Sửa</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Xóa</a>
                        </div>
                    </td>
                </tr>
                
            }
        </tbody>
    </table>
</div>
